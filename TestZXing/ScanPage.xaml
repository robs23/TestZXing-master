<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestZXing.ScanPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblUser" HorizontalTextAlignment="Center"/>
            <Button x:Name="btnScan" 
                    Text="Skanuj"
                    AutomationId="scanWithDefaultOverlay"
                    Clicked="btnScan_Clicked"/>
            <Label x:Name="lblScanResult" HorizontalTextAlignment="Center"/>
            <Label x:Name="lblGetOrder" HorizontalTextAlignment="Center" Text="Kliknij przycisk poniżej by wybrać otwarte zlecenie lub dodać nowe"/>
            <Button x:Name="btnOrders"
                    Text="Wybierz zlecenie"
                    Clicked="btnOrders_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>